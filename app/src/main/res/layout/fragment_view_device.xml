<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Card Principal -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDeviceInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:strokeColor="@color/md_theme_outline"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nombre del Cliente -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtNombreCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Cliente"
                android:textSize="22sp"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textStyle="bold"/>

            <!-- Marca y Modelo -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtMarcaModelo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca - Modelo"
                android:textSize="18sp"
                android:layout_marginTop="4dp"/>

            <!-- Precio -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: $0.00"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <!-- Monto a Pagar -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtMontoPagar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto a Pagar: $0.00"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

            <!-- Frecuencia de Pago -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtFrecuenciaPago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frecuencia de Pago: Semanal"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

            <!-- Periodo de Pago -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPeriodoPago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Periodo: XX/XX/XXXX - XX/XX/XXXX"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

            <!-- Estado del Teléfono -->
            <ImageView
                android:id="@+id/imgEstadoTelefono"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_phone_unlock"
                android:contentDescription="Estado del teléfono" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardDeviceInfo">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Editar"
            android:icon="@drawable/ic_edit" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBloquear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bloquear"
            android:icon="@drawable/ic_lock"
            android:textColor="@color/md_theme_error"
            style="@style/Widget.Material3.Button.TextButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEliminar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eliminar"
            android:icon="@drawable/ic_delete"
            android:textColor="@color/md_theme_error"
            style="@style/Widget.Material3.Button.TextButton"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
