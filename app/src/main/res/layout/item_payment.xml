<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Titulo -->
            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de pago"
                android:textSize="18sp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:layout_marginBottom="8dp"/>

            <!-- Monto -->
            <TextView
                android:id="@+id/txtMonto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto a Pagar: "
                android:textSize="16sp"
                android:textAppearance="?attr/textAppearanceBodyLarge"/>

            <TextView
                android:id="@+id/txtEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: "
                android:textSize="16sp"
                android:textAppearance="?attr/textAppearanceBodyLarge"/>

            <!-- Switch para cambiar el estado de pago -->
            <Switch
                android:id="@+id/switchEstadoPago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumb="@drawable/switch_thumb_selector"
                android:thumbTint="@color/md_theme_primary"
                android:trackTint="@color/md_theme_secondary" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>

